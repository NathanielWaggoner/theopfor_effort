<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.mycompany.calculator.BasicKeypad">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="%"
                android:id="@+id/Percent"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="7"
                android:id="@+id/Seven"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="4"
                android:id="@+id/Four"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="1"
                android:id="@+id/One"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="0"
                android:id="@+id/Zero"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="("
                android:id="@+id/OpenParen"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="8"
                android:id="@+id/Eight"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="5"
                android:id="@+id/Five"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="2"
                android:id="@+id/Two"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="."
                android:id="@+id/Decimal"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text=")"
                android:id="@+id/CloseParen"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="9"
                android:id="@+id/Nine"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="6"
                android:id="@+id/Six"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="3"
                android:id="@+id/Three"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="(-)"
                android:id="@+id/Negative"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="/"
                android:id="@+id/Divide"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="*"
                android:id="@+id/Multiply"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="-"
                android:id="@+id/Subtract"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="+"
                android:id="@+id/Add"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:textSize="16sp" />

            <Button
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="="
                android:id="@+id/Equals"
                android:layout_weight="1"
                android:onClick="buttonPress"
                android:nestedScrollingEnabled="false"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
