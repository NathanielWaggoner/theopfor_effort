<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CalculatorScreen">

    <HorizontalScrollView
        android:id="@+id/EquationScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emptyField"
            android:id="@+id/Equation"
            android:textSize="45sp"
            android:scrollHorizontally="true"
            android:layout_gravity="end"/>
    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/EquationScroll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Answer"
        android:gravity="center_vertical|end"
        android:text="@string/emptyField" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Answer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/history"
                android:id="@+id/History"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/clear"
                android:id="@+id/Clear"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:onClick="addChar"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="%"
                android:id="@+id/Percent"
                android:clickable="true"
                android:layout_weight="1"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="( )"
                android:id="@+id/Parentheses"
                android:clickable="true"
                android:layout_weight="1"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="^"
                android:id="@+id/Exponent"
                android:clickable="true"
                android:layout_weight="1"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/Divide"
                android:clickable="true"
                android:layout_weight="1"
                android:onClick="addChar"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/Seven"
                android:layout_weight="1"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/Eight"
                android:layout_weight="1"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/Nine"
                android:layout_weight="1"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="*"
                android:id="@+id/Multiply"
                android:layout_weight="1"
                android:onClick="addChar"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/Four"
                android:layout_weight="1"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/Five"
                android:layout_weight="1"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/Six"
                android:layout_weight="1"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/Subtract"
                android:layout_weight="1"
                android:onClick="addChar"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/One"
                android:layout_weight="1"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/Two"
                android:layout_weight="1"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/Three"
                android:layout_weight="1"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/Add"
                android:text="+"
                android:layout_weight="1"
                android:onClick="addChar"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/Zero"
                android:layout_weight="1"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/Decimal"
                android:layout_weight="1"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="(-)"
                android:id="@+id/Negative"
                android:layout_weight="1"
                android:onClick="addChar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="="
                android:id="@+id/Equals"
                android:layout_weight="1"
                android:onClick="addChar"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
